{
  "compilerOptions": {
    "outDir": "dist",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "CommonJS",
    "target": "ES5",
    "lib": [
      "es2017",
      "es2016"
    ]
  },
  "include": ["*.ts"],
  "exclude": [
    "node_modules"  
  ]
}
